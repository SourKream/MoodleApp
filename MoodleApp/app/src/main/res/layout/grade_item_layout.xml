<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textColor="#bdbdbd"
        android:id="@+id/courseGradeSNo"
        android:text="99"
        android:textSize="19dp"
        android:paddingTop="3dp"
        android:layout_weight="0.3"
        android:gravity="center"
        android:visibility="visible"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/courseGradeTitle"
            android:text="@string/StringStyle"
            android:textSize="20dp"
            android:paddingTop="3dp"
            android:paddingRight="5dp"
            android:textColor="#000000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/CourseLabel"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/courseCodeLabel"
                android:paddingRight="5dp"
                android:textColor="#7c7c82"
                android:text="CODE"
                android:textSize="15dp"
                android:layout_weight="3"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/ScoreLabel"
            android:visibility="visible">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="Score"
                android:textSize="15dp"
                android:layout_weight="0.9" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text=":"
                android:textSize="15dp"
                android:layout_weight="0.2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/courseGradeScore"
                android:paddingRight="5dp"
                android:textColor="#000000"
                android:text="LAST UPDATE"
                android:textSize="15dp"
                android:layout_weight="3"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#7c7c82"
                android:text="Weight"
                android:textSize="15dp"
                android:layout_weight="0.9"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="#7c7c82"
                android:text=":"
                android:textSize="15dp"
                android:layout_weight="0.2"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/courseGradeWeight"
                android:paddingRight="5dp"
                android:textColor="#7c7c82"
                android:text="DATE POSTED"
                android:textSize="15dp"
                android:layout_weight="3"
                android:paddingBottom="3dp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/courseGradeMarks"
        android:textSize="30dp"
        android:textColor="#000000"
        android:gravity="center|right"
        android:paddingRight="15dp"
        android:text="10"/>

</LinearLayout>